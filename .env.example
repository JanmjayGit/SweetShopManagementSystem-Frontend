# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8080

# Razorpay Configuration
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Application Configuration
VITE_APP_NAME=Sweet Shop
VITE_APP_VERSION=1.0.0

# Development/Production Environment
NODE_ENV=development

# Optional: Database Configuration (if needed for backend)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sweetshop
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Optional: JWT Configuration (if needed for backend)
# JWT_SECRET=your_jwt_secret_key
# JWT_EXPIRES_IN=24h

# Optional: Email Configuration (if needed for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Optional: Cloudinary Configuration (for image uploads)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret